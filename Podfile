# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
use_frameworks!

project 'GettyImageViewer.xcodeproj'

def shared_pods
  # Pods for all schems
  pod 'RxSwift', '~> 4.1'
  pod 'Alamofire', '~> 4.5'
  pod 'HTMLReader', '~> 2.1'
  pod 'HTMLString', '~> 4.0'
  pod 'SwiftyJSON', '~> 4.0'
  pod 'SVProgressHUD', '~> 2.2'
end

target 'GettyImageViewer' do
  # Pods for GettiyImageViewer scheme
    shared_pods
end
